<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.ticon">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Ticon"
        tools:targetApi="31">
        <activity
            android:name=".activities.SearchActivity"
            android:exported="false"
            android:label="SearchActivity"
            android:theme="@style/Theme.Ticon.NoActionBar" />
        <activity
            android:name=".activities.FunnyCategory"
            android:parentActivityName=".activities.MainActivity"
            android:exported="false"
            android:label="#FUNNY"
            android:theme="@style/Theme.Ticon.NoActionBar" />
        <activity
            android:name=".activities.AnimalsCategory"
            android:parentActivityName=".activities.MainActivity"
            android:exported="false"
            android:label="#ANIMALS"
            android:theme="@style/Theme.Ticon.NoActionBar" />
        <activity
            android:name=".activities.CharacterCategory"
            android:parentActivityName=".activities.MainActivity"
            android:exported="false"
            android:label="#CHARACTER"
            android:theme="@style/Theme.Ticon.NoActionBar" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="false"
            android:label="@string/title_activity_main"
            android:theme="@style/Theme.Ticon.NoActionBar" />
        <activity
            android:name=".activities.DetailsActivity"
            android:exported="false"
            android:label="DetailsActivity"
            android:theme="@style/Theme.Ticon.NoActionBar" />
        <activity
            android:name=".activities.PreviewActivity"
            android:exported="false"
            android:label="PreviewActivity"
            android:theme="@style/Theme.Ticon.NoActionBar" />
        <activity
            android:name=".activities.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.Ticon.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>