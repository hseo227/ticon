<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/popular"
            android:textColor="#9E9E9E"
            android:textSize="20sp"
            android:padding="10dp"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="230dp"
                    android:layout_height="230dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/duck_heart" />

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="230dp"
                    android:layout_height="230dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/duck_o" />

                <ImageButton
                    android:id="@+id/imageButton3"
                    android:layout_width="230dp"
                    android:layout_height="230dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/duck_x" />

                <ImageButton
                    android:id="@+id/imageButton4"
                    android:layout_width="230dp"
                    android:layout_height="230dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/duck_cry" />
            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/categories"
            android:textColor="#9E9E9E"
            android:textSize="20sp"
            android:padding="10dp"
            android:layout_marginTop="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:text="@string/for_you"
                android:backgroundTint="#E0F2F1"/>/>

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:text="@string/funny"
                android:backgroundTint="#80CBC4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:text="@string/for_you"
                android:backgroundTint="@color/white_300"/>

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:text="@string/funny"
                android:backgroundTint="#00897B"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:text="@string/character"
                android:backgroundTint="@color/mint_a100"/>

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:text="@string/cute"
                android:backgroundTint="@color/white_300"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>